# i3 config file (v4)

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
#font pango:DejaVu Sans Mono 8


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym Control+Mod1+t exec --no-startup-id sh -c 'command -v kitty &>/dev/null && kitty || i3-sensible-terminal'

# kill window
bindsym Control+Mod1+x exec xkill

# start program launcher
bindsym $mod+Return exec rofi -show drun -theme material.rasi

# move focus window
bindsym $mod+Left move left
bindsym $mod+Down move down
bindsym $mod+Up move up
bindsym $mod+Right move right

# change focus
bindsym $mod+Shift+Left focus left
bindsym $mod+Shift+Down focus down
bindsym $mod+Shift+Up focus up
bindsym $mod+Shift+Right focus right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# change focus between tiling / floating windows
bindsym $mod+Shift+space floating toggle

# enter fullscreen mode for the focused container
bindsym Mod1+F10 fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym Mod1+F1 layout stacking
bindsym Mod1+F2 layout tabbed
bindsym Mod1+F3 layout toggle split

# switch to workspace
bindsym Control+F1 workspace 1
bindsym Control+F2 workspace 2
bindsym Control+F3 workspace 3
bindsym Control+F4 workspace 4
bindsym Control+Mod1+Left workspace prev
bindsym Control+Mod1+Right workspace next
bindsym Control+Mod1+Shift+Left move workspace prev
bindsym Control+Mod1+Shift+Right move workspace next
bindsym Control+Mod1+KP_1 move container to workspace number 1
bindsym Control+Mod1+KP_2 move container to workspace number 2
bindsym Control+Mod1+KP_3 move container to workspace number 3
bindsym Control+Mod1+KP_4 move container to workspace number 4

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym Mod1+F8 mode "resize"

# other
bindsym F12 exec xfce4-terminal --drop-down
bindsym Control+Mod1+Escape exec --no-startup-id xfce4-taskmanager
bindsym Control+Mod1+A exec kitty distrobox-enter -n arch
bindsym $mod+e exec thunar
bindsym $mod+l exec xfce4-popup-whiskermenu
bindsym Print exec xfce4-screenshooter

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
#bar {
#        status_command i3status
#}
bindsym Mod1+Tab exec --no-startup-id rofi -show window -theme material.rasi
bindsym Mod1+F4 kill
exec --no-startup-id xfdesktop
#for_window [class=".*"] floating enable
bindsym Mod1+F9 move scratchpad
bindsym Mod1+F7 scratchpad show
bindsym Control+Mod1+d exec --no-startup-id bash -c 'i3-msg -t get_tree | jq -r '\''.. | objects | select(.window != null) | .id'\'' | xargs -I{} i3-msg "[con_id={}] move scratchpad"'
bindsym Control+Mod1+Delete exec xfce4-session-logout

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
