#! /bin/bash
cd
sudo snapper -c root create-config /
sudo btrfs subvolume delete /.snapshots
sudo mkdir /.snapshots
sudo mkdir /mnt/btrfs
sudo mount /dev/sda1 /mnt/btrfs
cd /mnt/btrfs
sudo btrfs subvolume create snapshots
cd ..
sudo umount /mnt/btrfs
