#! /bin/bash
pacman -S snapper-gui --noconfirm --needed
pacman -S snap-pac --noconfirm --needed
pacman -S snap-sync --noconfirm --needed
umount /.snapshots
rm -rf /.snapshots
snapper -c root create-config /
sed -i 's/^ALLOW_USERS=""/ALLOW_USERS="howling"/' /etc/snapper/configs/root
sed -i 's/^TIMELINE_LIMIT_HOURLY="10"/TIMELINE_LIMIT_HOURLY="0"/' /etc/snapper/configs/root
sed -i 's/^TIMELINE_LIMIT_DAILY="10"/TIMELINE_LIMIT_DAILY="4"/' /etc/snapper/configs/root
sed -i 's/^TIMELINE_LIMIT_WEEKLY="0"/TIMELINE_LIMIT_WEEKLY="2"/' /etc/snapper/configs/root
sed -i 's/^TIMELINE_LIMIT_MONTHLY="10"/TIMELINE_LIMIT_MONTHLY="1"/' /etc/snapper/configs/root
sed -i 's/^TIMELINE_LIMIT_YEARLY="10"/TIMELINE_LIMIT_YEARLY="0"/' /etc/snapper/configs/root
btrfs subvolume delete /.snapshots
mkdir /.snapshots
mkdir /mnt/btrfs

#--------------check sda----------------
mount /dev/sda1 /mnt/btrfs

btrfs subvolume create /mnt/btrfs/snapshots
chmod a+rx /.snapshots
mv /mnt/btrfs/boot /mnt/btrfs/boot.old
btrfs subvol create /mnt/btrfs/boot
mv /mnt/btrfs/boot.old/* /mnt/btrfs/boot/
rmdir /mnt/btrfs/boot.old
umount /mnt/btrfs
rmdir /mnt/btrfs

#replace uuid from id u get fromm /etc/fstab
PART_UUID=$(blkid -o value -s UUID /dev/sda1)
echo UUID="${PART_UUID}" /.snapshots    btrfs subvol=snapshots 0 0 >> /etc/fstab

mount -a
btrfs subvolume get-default /

# sudo btrfs subv list / get the id of root
btrfs subvolume set-default 256 /

btrfs subvolume get-default /
#sudo nano /boot/grub/grub.cfg
#removeall = rootflags=subvol=@  
#sudo snapper rollback 2
#sudo snapper --ambit classic rollback 2

#sudo snapper -c root create-config / 
#snapper status 21..22
#sudo btrfs subvolume list /
#snapper list
#snapper delete
#snapper diff 71..72 /etc/zypp/zypp.conf
#snapper create --description "Snapshot for week 2 2014"
