#!/bin/bash

# Function to check if a package is installed
pkg_installed() {
    pacman -Q "$1" &>/dev/null || yay -Q "$1" &>/dev/null
}

# Check missing packages for pacman packages
while read -r pkg; do
    if ! pkg_installed "$pkg"; then
        echo "$pkg" >> pacman-missing.txt
    fi
done < pacman-pkgs.txt

# Check missing packages for AUR packages
while read -r pkg; do
    if ! pkg_installed "$pkg"; then
        echo "$pkg" >> aur-missing.txt
    fi
done < aur-pkgs.txt

echo "Missing packages check completed."
